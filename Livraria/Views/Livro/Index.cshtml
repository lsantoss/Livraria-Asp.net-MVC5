@model IEnumerable<Livraria.Models.Livro>

<h2>Lista de Livros</h2>

@if (Int32.Parse(Session["Priv"].ToString()) != 3)
{
    <p><button class="btn btn-link create" style="margin-left:-1%;">Inserir novo livro</button></p>
}

@using (Html.BeginForm("BuscarPorNome", "Livro", FormMethod.Post))
{
    <div class="form-horizontal">
        <div class="row">
            <div class="col-md-9">
                <input type="text" placeholder="Buscar livro por nome" name="CPBusca" class="form-control" />
            </div>
            <div class="col-md-3 text-right">
                <input type="submit" value="Buscar" class="btn btn-primary" />
                <a href="Index" class="btn btn-info btn">Todos</a>
            </div>
        </div>
    </div>
    <br />
}

<table class="table">
    <tr style="font-size:125%;">
        <th>@Html.DisplayNameFor(model => model.Imagem)</th>
        <th>@Html.DisplayNameFor(model => model.Nome)</th>
        <th>@Html.DisplayNameFor(model => model.Autor)</th>
        <th>Ações</th>
    </tr>

    @if (Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            <tr>
                <td><img src="@Url.Content("~/Content/Imagens/" + @Html.DisplayFor(modelItem => item.Imagem))" height="80" width="60" /></td>
                <td style="vertical-align: middle;">@Html.DisplayFor(modelItem => item.Nome)</td>
                <td style="vertical-align: middle;">@Html.DisplayFor(modelItem => item.Autor)</td>

                @if (Int32.Parse(Session["Priv"].ToString()) != 3)
                {
                    <td style="vertical-align: middle;">
                        <button class="btn btn-primary details" data-id="@item.Id">Detalhes</button>
                        <button class="btn btn-success edit" data-id="@item.Id">Editar</button>
                        @if (Int32.Parse(Session["Priv"].ToString()) == 1)
                        {
                            <button class="btn btn-danger delete" data-id="@item.Id">Apagar</button>
                        }
                    </td>
                }

                @if (Int32.Parse(Session["Priv"].ToString()) == 3)
                {
                    <td style="vertical-align: middle;">
                        <button class="btn btn-info details" data-id="@item.Id">Detalhes</button>
                    </td>
                }
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="4">
                <br />
                <center><span class="text-uppercase">Não existe nenhum registro para ser listado!</span></center>
            </td>
        </tr>
    }
</table>

<div id="modal" class="modal fade" role="dialog"></div>

<script>
    $(function () {
        $(".details").click(function () {
            var id = $(this).attr("data-id");
            $("#modal").load("Details?id=" + id, function () {
                $("#modal").modal();
            })
        });
        $(".edit").click(function () {
            var id = $(this).attr("data-id");
            $("#modal").load("Edit?id=" + id, function () {
                $("#modal").modal();
            })
        });
        $(".delete").click(function () {
            var id = $(this).attr("data-id");
            $("#modal").load("Delete?id=" + id, function () {
                $("#modal").modal();
            })
        });
        $(".create").click(function () {
            $("#modal").load("Create", function () {
                $("#modal").modal();
            })
        });
    })
</script>